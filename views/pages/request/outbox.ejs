<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <style>
      .request-card {
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .request-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      }
      .badge-pending {
        background-color: #ffc107;
        color: #000;
      }
      .badge-accepted {
        background-color: #28a745;
      }
      .badge-declined {
        background-color: #dc3545;
      }
      .badge-cancelled {
        background-color: #6c757d;
      }
    </style>
  </head>
  <body>
    <%- include('../../partials/navbar') %>

    <div class="container mt-5">
      <div class="row">
        <div class="col-12">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-paper-plane"></i> Sent Requests</h2>
            <a href="/requests/inbox" class="btn btn-outline-primary">
              <i class="fas fa-inbox"></i> Received Requests
            </a>
          </div>

          <!-- Filter Tabs -->
          <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
              <a
                class="nav-link <%= activeTab === 'all' ? 'active' : '' %>"
                href="/requests/outbox?status=all"
              >
                All (<%= requests.length %>)
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= activeTab === 'pending' ? 'active' : '' %>"
                href="/requests/outbox?status=pending"
              >
                Pending
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= activeTab === 'accepted' ? 'active' : '' %>"
                href="/requests/outbox?status=accepted"
              >
                Accepted
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= activeTab === 'declined' ? 'active' : '' %>"
                href="/requests/outbox?status=declined"
              >
                Declined
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link <%= activeTab === 'cancelled' ? 'active' : '' %>"
                href="/requests/outbox?status=cancelled"
              >
                Cancelled
              </a>
            </li>
          </ul>

          <!-- Requests List -->
          <% if (requests.length === 0) { %>
          <div class="alert alert-info text-center">
            <i class="fas fa-paper-plane fa-3x mb-3"></i>
            <h5>No requests found</h5>
            <p class="mb-0">You haven't sent any swap requests yet.</p>
            <a href="/browse" class="btn btn-primary mt-3">
              <i class="fas fa-search"></i> Browse Users
            </a>
          </div>
          <% } else { %>
          <div class="row">
            <% requests.forEach(request => { %>
            <div class="col-md-6 mb-4">
              <div class="card request-card h-100">
                <div class="card-body">
                  <!-- Header with Status Badge -->
                  <div
                    class="d-flex justify-content-between align-items-start mb-3"
                  >
                    <div class="d-flex align-items-center">
                      <img
                        src="<%= request.toUser.profile?.avatar || '/images/default-avatar.png' %>"
                        alt="<%= request.toUser.name %>"
                        class="rounded-circle me-3"
                        style="width: 50px; height: 50px; object-fit: cover"
                      />
                      <div>
                        <h5 class="mb-0">
                          <a
                            href="/profile/<%= request.toUser._id %>"
                            class="text-decoration-none"
                          >
                            <%= request.toUser.name %>
                          </a>
                        </h5>
                        <small class="text-muted">
                          <%= request.toUser.profile?.location || 'Location not
                          set' %>
                        </small>
                      </div>
                    </div>
                    <span class="badge badge-<%= request.status %>">
                      <%= request.status.toUpperCase() %>
                    </span>
                  </div>

                  <!-- Skills Exchange -->
                  <div class="mb-3">
                    <div class="d-flex align-items-center mb-2">
                      <span class="badge bg-success me-2">
                        <i class="fas fa-chalkboard-teacher"></i> You'll Teach
                      </span>
                      <strong><%= request.skillToTeach %></strong>
                    </div>
                    <div class="d-flex align-items-center">
                      <span class="badge bg-primary me-2">
                        <i class="fas fa-book-reader"></i> You Want to Learn
                      </span>
                      <strong><%= request.skillToLearn %></strong>
                    </div>
                  </div>

                  <!-- Your Message -->
                  <div class="alert alert-light mb-3">
                    <small class="text-muted d-block mb-1">
                      <i class="fas fa-comment"></i> Your Message:
                    </small>
                    <p class="mb-0"><%= request.message %></p>
                  </div>

                  <!-- Timestamp -->
                  <small class="text-muted">
                    <i class="fas fa-clock"></i>
                    Sent on <%= new
                    Date(request.createdAt).toLocaleDateString('en-US', { year:
                    'numeric', month: 'long', day: 'numeric' }) %>
                  </small>

                  <!-- Cancel Button (only for pending requests) -->
                  <% if (request.status === 'pending') { %>
                  <div class="mt-3">
                    <button
                      class="btn btn-outline-danger w-100"
                      onclick="cancelRequest('<%= request._id %>')"
                    >
                      <i class="fas fa-ban"></i> Cancel Request
                    </button>
                  </div>
                  <% } %>

                  <!-- Show response date if accepted/declined -->
                  <% if (request.respondedAt) { %>
                  <div class="mt-2">
                    <small class="text-muted">
                      <i class="fas fa-info-circle"></i>
                      Responded on <%= new
                      Date(request.respondedAt).toLocaleDateString() %>
                    </small>
                  </div>
                  <% } %>

                  <!-- Start Chat Button (for accepted requests) -->
                  <% if (request.status === 'accepted') { %>
                  <div class="mt-3">
                    <a
                      href="/chat/<%= request.toUser._id %>"
                      class="btn btn-primary w-100"
                    >
                      <i class="fas fa-comments"></i> Start Chat
                    </a>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      async function cancelRequest(requestId) {
        if (!confirm("Are you sure you want to cancel this request?")) {
          return;
        }

        try {
          const response = await fetch(`/requests/${requestId}/cancel`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });

          const data = await response.json();

          if (data.success) {
            alert(data.message);
            window.location.reload();
          } else {
            alert(data.message || "Something went wrong");
          }
        } catch (error) {
          console.error("Error:", error);
          alert("Failed to cancel request. Please try again.");
        }
      }
    </script>
  </body>
</html>
