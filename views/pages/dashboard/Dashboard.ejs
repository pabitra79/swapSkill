    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Add floating animation to stats cards
        const statsCards = document.querySelectorAll(".stats-card");
        statsCards.forEach((card, index) => {
          card.style.animationDelay = `${index * 0.1}s`;
          card.classList.add("floating");
        });

        // Load both session stats and dashboard stats
        loadSessionStats();
        updateDashboardStats();

        // Update stats every 30 seconds (optional)
        setInterval(() => {
          loadSessionStats();
          updateDashboardStats();
        }, 30000);
      });

      // Function to load session balance stats
      async function loadSessionStats() {
        try {
          const response = await fetch("/sessions/stats");
          const data = await response.json();

          const balanceClass =
            data.balance > 0
              ? "text-success"
              : data.balance < 0
              ? "text-danger"
              : "text-secondary";
          const balanceIcon =
            data.balance > 0 ? "‚¨ÜÔ∏è" : data.balance < 0 ? "‚¨áÔ∏è" : "‚ûñ";

          document.getElementById("balanceStats").innerHTML = `
        <div class="row text-center">
          <div class="col-4">
            <h3 class="text-success">${data.hoursTaught || 0}</h3>
            <small class="text-muted">Hours Taught</small>
          </div>
          <div class="col-4">
            <h3 class="text-primary">${data.hoursLearned || 0}</h3>
            <small class="text-muted">Hours Learned</small>
          </div>
          <div class="col-4">
            <h3 class="${balanceClass}">${balanceIcon} ${data.balance || 0}</h3>
            <small class="text-muted">Balance</small>
          </div>
        </div>
        <div class="mt-3">
          <small class="text-muted">Total Sessions: ${
            data.totalSessions || 0
          }</small>
        </div>
      `;
        } catch (error) {
          console.error("Error loading session stats:", error);
          document.getElementById("balanceStats").innerHTML = `
        <p class="text-danger">Failed to load session statistics</p>
      `;
        }
      }

      // Function to update dashboard stats
      async function updateDashboardStats() {
        try {
          const response = await fetch("/sessions/stats");
          const stats = await response.json();

          // Update the stat numbers
          document.getElementById("completedSessions").textContent =
            stats.totalSessions || 0;
          document.getElementById("hoursTaught").textContent =
            stats.hoursTaught || 0;
          document.getElementById("hoursLearned").textContent =
            stats.hoursLearned || 0;

          // Calculate and update balance
          const balance = (stats.hoursTaught || 0) - (stats.hoursLearned || 0);
          const balanceElement = document.getElementById("skillBalance");
          const balanceIcon = document.getElementById("balanceIcon");

          balanceElement.textContent = (balance > 0 ? "+" : "") + balance;

          // Update balance color and icon
          if (balance >= 0) {
            balanceElement.className = "stat-number";
            balanceIcon.className =
              "fas fa-scale-balanced fa-2x text-success mt-2";
          } else {
            balanceElement.className = "stat-number";
            balanceIcon.className =
              "fas fa-scale-balanced fa-2x text-warning mt-2";
          }
        } catch (error) {
          console.error("Error updating dashboard stats:", error);
        }
      }
    </script>
  </body>
