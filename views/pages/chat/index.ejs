<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        * { font-family: 'Inter', sans-serif; }
        body { background: #f8f9fa; }
        .sidebar {
            background: rgba(30, 30, 122, 0.95);
            min-height: 100vh;
            padding: 30px 15px;
        }
        .sidebar .nav-link {
            color: #d1d5db !important;
            padding: 15px 20px;
            margin-bottom: 8px;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-weight: 500;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: var(--primary-gradient);
            color: white !important;
            transform: translateX(8px);
        }
        .chat-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1);
            height: 80vh;
            display: flex;
            overflow: hidden;
        }
        .conversations-sidebar {
            width: 350px;
            border-right: 1px solid #e5e7eb;
            display: flex;
            flex-direction: column;
        }
        .conversations-header {
            padding: 20px;
            border-bottom: 1px solid #e5e7eb;
            background: var(--primary-gradient);
            color: white;
            border-radius: 15px 0 0 0;
        }
        .conversations-list {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
        }
        .conversation-item {
            padding: 15px;
            border-radius: 12px;
            margin-bottom: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }
        .conversation-item:hover {
            background: #f8fafc;
            transform: translateX(5px);
        }
        .conversation-item.active {
            background: #f0f4ff;
            border-color: #667eea;
        }
        .conversation-item.unread {
            background: #fef3f3;
            border-left: 4px solid #ef4444;
        }
        .chat-area {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        .chat-header {
            padding: 20px;
            border-bottom: 1px solid #e5e7eb;
            background: #f9fafb;
            border-radius: 0 15px 0 0;
        }
        .chat-messages {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 15px;
            background: #f9fafb;
        }
        .message {
            max-width: 70%;
            padding: 12px 16px;
            border-radius: 18px;
            position: relative;
            word-wrap: break-word;
        }
        .message-sent {
            align-self: flex-end;
            background: var(--primary-gradient);
            color: white;
            border-bottom-right-radius: 5px;
        }
        .message-received {
            align-self: flex-start;
            background: white;
            color: #374151;
            border-bottom-left-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        .message-time {
            font-size: 0.75rem;
            opacity: 0.8;
            margin-top: 5px;
            text-align: right;
        }
        .chat-input-container {
            padding: 20px;
            border-top: 1px solid #e5e7eb;
            background: white;
            border-radius: 0 0 15px 0;
        }
        .chat-input {
            border-radius: 25px;
            padding: 12px 20px;
            border: 2px solid #e5e7eb;
            resize: none;
        }
        .chat-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        .send-btn {
            border-radius: 50%;
            width: 50px;
            height: 50px;
            background: var(--primary-gradient);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .send-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .send-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        .avatar-chat {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            object-fit: cover;
        }
        .avatar-placeholder-chat {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }
        .empty-chat-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            text-align: center;
            color: #6b7280;
        }
        .unread-badge {
            background: #ef4444;
            color: white;
            border-radius: 10px;
            padding: 2px 8px;
            font-size: 0.75rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <%- include('../../partials/navbar') %>
    
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/browse"><i class="fas fa-search"></i> Browse Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/requests/inbox"><i class="fas fa-inbox"></i> Requests</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/chat"><i class="fas fa-comments"></i> Messages</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile"><i class="fas fa-user"></i> My Profile</a>
                    </li>
                    <li class="nav-item mt-5">
                        <a class="nav-link text-danger" href="/api/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                    </li>
                </ul>
            </div>
            
            <div class="col-md-10 p-4">
                <div class="mb-4">
                    <h2 style="background: var(--primary-gradient);  -webkit-text-fill-color: transparent; font-weight: 800;">
                        <i class="fas fa-comments"></i> Messages
                    </h2>
                    <p class="text-muted">Chat with your skill swap partners</p>
                </div>
                
                <div class="chat-container">
                    <!-- Conversations Sidebar -->
                    <div class="conversations-sidebar">
                        <div class="conversations-header">
                            <h5 class="mb-0 text-white"><i class="fas fa-inbox me-2"></i>Conversations</h5>
                            <small class="text-white-50"><%= conversations.length %> active chats</small>
                        </div>
                        
                        <div class="conversations-list">
                            <% if (conversations && conversations.length > 0) { %>
                                <% conversations.forEach(conv => { %>
                                <div class="conversation-item <%= conv.unreadCount > 0 ? 'unread' : '' %> <%= activeConversation && activeConversation.swapRequestId === conv.swapRequestId ? 'active' : '' %>" 
                                     onclick="selectConversation('<%= conv.swapRequestId %>')">
                                    <div class="d-flex align-items-center">
                                        <div class="me-3">
                                            <% if (conv.otherUser.avatar) { %>
                                            <img src="<%= conv.otherUser.avatar %>" alt="<%= conv.otherUser.name %>" class="avatar-chat" />
                                            <% } else { %>
                                            <div class="avatar-placeholder-chat">
                                                <%= conv.otherUser.name.charAt(0).toUpperCase() %>
                                            </div>
                                            <% } %>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <h6 class="mb-1"><%= conv.otherUser.name %></h6>
                                                <% if (conv.unreadCount > 0) { %>
                                                <span class="unread-badge"><%= conv.unreadCount %></span>
                                                <% } %>
                                            </div>
                                            <p class="text-muted mb-1 small">
                                                <% if (conv.lastMessage) { %>
                                                    <% if (conv.lastMessage.fromMe) { %>You: <% } %>
                                                    <%= conv.lastMessage.text.length > 30 ? conv.lastMessage.text.substring(0, 30) + '...' : conv.lastMessage.text %>
                                                <% } else { %>
                                                    <em>No messages yet</em>
                                                <% } %>
                                            </p>
                                            <small class="text-muted">
                                                <i class="fas fa-exchange-alt me-1"></i> <%= conv.skill %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center p-4 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>No conversations yet</p>
                                    <a href="/requests/inbox" class="btn btn-sm btn-primary">View Requests</a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Chat Area -->
                    <div class="chat-area">
                        <% if (activeConversation) { %>
                            <!-- Chat Header -->
                            <div class="chat-header">
                                <div class="d-flex align-items-center">
                                    <% if (activeConversation.otherUser.avatar) { %>
                                    <img src="<%= activeConversation.otherUser.avatar %>" alt="<%= activeConversation.otherUser.name %>" class="avatar-chat me-3" />
                                    <% } else { %>
                                    <div class="avatar-placeholder-chat me-3">
                                        <%= activeConversation.otherUser.name.charAt(0).toUpperCase() %>
                                    </div>
                                    <% } %>
                                    <div>
                                        <h5 class="mb-0"><%= activeConversation.otherUser.name %></h5>
                                        <small class="text-muted">
                                            <i class="fas fa-exchange-alt me-1"></i> <%= activeConversation.skill %>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Chat Messages -->
                            <div class="chat-messages" id="chatMessages">
                                <div class="text-center text-muted" id="loadingIndicator">
                                    <i class="fas fa-spinner fa-spin fa-2x mb-2"></i>
                                    <p>Loading messages...</p>
                                </div>
                            </div>
                            
                            <!-- Chat Input -->
                            <div class="chat-input-container">
                                <div class="d-flex gap-2">
                                    <textarea class="form-control chat-input" id="messageInput" rows="1" 
                                              placeholder="Type your message..." maxlength="2000"></textarea>
                                    <button class="send-btn" id="sendButton" disabled>
                                        <i class="fas fa-paper-plane"></i>
                                    </button>
                                </div>
                                <small class="text-muted">
                                    <span id="charCount">0</span>/2000 characters
                                </small>
                            </div>
                        <% } else { %>
                            <!-- Empty State -->
                            <div class="empty-chat-state">
                                <i class="fas fa-comments fa-4x mb-3" style="opacity: 0.3;"></i>
                                <h4>Select a conversation</h4>
                                <p class="text-muted">Choose a conversation from the sidebar to start chatting</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        let socket;
        let currentSwapRequestId = '<%= activeConversation ? activeConversation.swapRequestId : "" %>';
        const currentUserId = "<%= currentUser._id %>";
        
        function initializeSocket() {
            console.log('üîå Initializing Socket.io...');
            
            socket = io({
                transports: ['websocket', 'polling'],
                reconnection: true,
                reconnectionDelay: 1000,
                reconnectionAttempts: 5
            });
            
            socket.on('connect', () => {
                console.log('‚úÖ Socket connected:', socket.id);
                socket.emit('authenticate', { userId: currentUserId });
                
                if (currentSwapRequestId) {
                    console.log('üì• Joining chat room:', currentSwapRequestId);
                    joinChatRoom(currentSwapRequestId);
                }
            });
            
            socket.on('disconnect', () => {
                console.log('‚ùå Socket disconnected');
            });
            
            socket.on('connect_error', (error) => {
                console.error('‚ùå Connection error:', error);
            });
            
            socket.on('new_message', (message) => {
                console.log('üì® New message received:', message);
                if (message.swapRequestId === currentSwapRequestId) {
                    addMessageToChat(message);
                    scrollToBottom();
                }
            });
            
            socket.on('message_error', (data) => {
                console.error('‚ùå Message error:', data.error);
                alert('Failed to send message: ' + data.error);
            });
        }
        
        function selectConversation(swapRequestId) {
            window.location.href = `/chat?conversation=${swapRequestId}`;
        }
        
        function joinChatRoom(swapRequestId) {
            console.log('üì• Joining room: chat_' + swapRequestId);
            socket.emit('join_chat', swapRequestId);
            loadChatHistory(swapRequestId);
        }
        
        async function loadChatHistory(swapRequestId) {
            console.log('üìú Loading chat history for:', swapRequestId);
            try {
                const response = await fetch(`/chat/api/history/${swapRequestId}`);
                const result = await response.json();
                
                if (result.success) {
                    console.log('‚úÖ Loaded', result.messages.length, 'messages');
                    displayMessages(result.messages);
                } else {
                    console.error('‚ùå Failed to load messages:', result.error);
                }
            } catch (error) {
                console.error('‚ùå Error loading chat history:', error);
            }
        }
        
        function displayMessages(messages) {
            const messagesContainer = document.getElementById('chatMessages');
            const loadingIndicator = document.getElementById('loadingIndicator');
            
            if (loadingIndicator) {
                loadingIndicator.style.display = 'none';
            }
            
            messagesContainer.innerHTML = '';
            
            if (messages && messages.length > 0) {
                messages.forEach(message => {
                    addMessageToChat(message);
                });
                scrollToBottom();
            } else {
                messagesContainer.innerHTML = `
                    <div class="text-center text-muted my-4">
                        <i class="fas fa-comments fa-2x mb-2"></i>
                        <p>No messages yet. Start the conversation!</p>
                    </div>
                `;
            }
        }
        
        function addMessageToChat(message) {
            const messagesContainer = document.getElementById('chatMessages');
            
            // Remove empty state if exists
            const emptyState = messagesContainer.querySelector('.text-center');
            if (emptyState && emptyState.textContent.includes('No messages yet')) {
                emptyState.remove();
            }
            
            const messageElement = document.createElement('div');
            
            // Check if message is from current user
            const isSent = (message.fromUser._id || message.fromUser) === currentUserId;
            messageElement.className = `message ${isSent ? 'message-sent' : 'message-received'}`;
            
            const messageTime = new Date(message.createdAt).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            
            messageElement.innerHTML = `
                <div class="message-content">${escapeHtml(message.message)}</div>
                <div class="message-time">${messageTime}</div>
            `;
            
            messagesContainer.appendChild(messageElement);
        }
        
        async function sendMessage() {
            const messageInput = document.getElementById('messageInput');
            const message = messageInput.value.trim();
            
            if (!message || !currentSwapRequestId) {
                console.log('‚ùå Cannot send: empty message or no conversation');
                return;
            }
            
            console.log('üì§ Sending message via Socket.io...');
            
            // Send via Socket.io for real-time delivery
            socket.emit('send_message', {
                swapRequestId: currentSwapRequestId,
                fromUserId: currentUserId,
                message: message
            });
            
            // Clear input immediately
            messageInput.value = '';
            updateCharCount();
            updateSendButton();
            
            console.log('‚úÖ Message emitted to server');
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        function scrollToBottom() {
            const messagesContainer = document.getElementById('chatMessages');
            if (messagesContainer) {
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }
        }
        
        function updateCharCount() {
            const messageInput = document.getElementById('messageInput');
            const charCount = document.getElementById('charCount');
            if (charCount && messageInput) {
                charCount.textContent = messageInput.value.length;
            }
        }
        
        function updateSendButton() {
            const messageInput = document.getElementById('messageInput');
            const sendButton = document.getElementById('sendButton');
            if (sendButton && messageInput) {
                sendButton.disabled = messageInput.value.trim().length === 0;
            }
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üì± Page loaded, initializing...');
            initializeSocket();
            
            const messageInput = document.getElementById('messageInput');
            const sendButton = document.getElementById('sendButton');
            
            if (messageInput && sendButton) {
                messageInput.addEventListener('input', function() {
                    updateCharCount();
                    updateSendButton();
                    this.style.height = 'auto';
                    this.style.height = Math.min(this.scrollHeight, 120) + 'px';
                });
                
                messageInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        sendMessage();
                    }
                });
                
                sendButton.addEventListener('click', sendMessage);
            }
        });
    </script>
</body>
</html>