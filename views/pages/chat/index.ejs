              <div class="conversations-header">
                <h5 class="mb-1 text-white">
                  <i class="fas fa-inbox me-2"></i>Conversations
                </h5>
                <small class="text-white-50 opacity-75">
                  <%= conversations.length %> active chats
                </small>
              </div>

              <div class="conversations-list">
                <% if (conversations && conversations.length > 0) { %> <%
                conversations.forEach(conv => { %>
                <div
                  class="conversation-item <%= conv.unreadCount > 0 ? 'unread' : '' %> <%= activeConversation && activeConversation.swapRequestId === conv.swapRequestId ? 'active' : '' %>"
                  onclick="selectConversation('<%= conv.swapRequestId %>')"
                >
                  <div class="d-flex align-items-center">
                    <div class="me-3 position-relative">
                      <% if (conv.otherUser.avatar) { %>
                      <img
                        src="<%= conv.otherUser.avatar %>"
                        alt="<%= conv.otherUser.name %>"
                        class="avatar-chat"
                      />
                      <% } else { %>
                      <div class="avatar-placeholder-chat">
                        <%= conv.otherUser.name.charAt(0).toUpperCase() %>
                      </div>
                      <% } %>
                    </div>
                    <div class="flex-grow-1">
                      <div
                        class="d-flex justify-content-between align-items-start mb-1"
                      >
                        <h6 class="mb-0 fw-bold text-dark">
                          <%= conv.otherUser.name %>
                        </h6>
                        <% if (conv.unreadCount > 0) { %>
                        <span class="unread-badge"
                          ><%= conv.unreadCount %></span
                        >
                        <% } %>
                      </div>
                      <p class="text-muted mb-2 small">
                        <% if (conv.lastMessage) { %> <% if
                        (conv.lastMessage.fromMe) { %>
                        <span class="text-primary">You: </span>
                        <% } %> <%= conv.lastMessage.text.length > 35 ?
                        conv.lastMessage.text.substring(0, 35) + '...' :
                        conv.lastMessage.text %> <% } else { %>
                        <em class="text-muted">No messages yet</em>
                        <% } %>
                      </p>
                      <span class="skill-badge-chat">
                        <i class="fas fa-exchange-alt me-1"></i><%= conv.skill
                        %>
                      </span>
                    </div>
                  </div>
                </div>
                <% }); %> <% } else { %>
                <div class="empty-chat-state">
                  <i class="fas fa-inbox"></i>
                  <h5 class="mb-3">No Conversations</h5>
                  <p class="text-muted mb-4">
                    Start a conversation by accepting a swap request
                  </p>
                  <a href="/requests/inbox" class="btn btn-primary">
                    <i class="fas fa-inbox me-2"></i>View Requests
                  </a>
                </div>
                <% } %>
              </div>
            </div>

            <!-- Chat Area -->
            <div class="chat-area">
              <% if (activeConversation) { %>
              <!-- Chat Header -->
              <div class="chat-header">
                <div class="d-flex align-items-center">
                  <div class="me-3">
                    <% if (activeConversation.otherUser.avatar) { %>
                    <img
                      src="<%= activeConversation.otherUser.avatar %>"
                      alt="<%= activeConversation.otherUser.name %>"
                      class="avatar-chat"
                    />
                    <% } else { %>
                    <div class="avatar-placeholder-chat">
                      <%=
                      activeConversation.otherUser.name.charAt(0).toUpperCase()
                      %>
                    </div>
                    <% } %>
                  </div>
                  <div class="flex-grow-1">
                    <h5 class="mb-1 fw-bold text-dark">
                      <%= activeConversation.otherUser.name %>
                    </h5>
                    <div class="d-flex align-items-center">
                      <span
                        class="badge bg-primary bg-opacity-10 text-primary px-3 py-1 me-2"
                      >
                        <i class="fas fa-exchange-alt me-1"></i><%=
                        activeConversation.skill %>
                      </span>
                      <small class="text-muted">
                        <i
                          class="fas fa-circle text-success me-1"
                          style="font-size: 0.6rem"
                        ></i>
                        Online
                      </small>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Chat Messages -->
              <div class="chat-messages" id="chatMessages">
                <div class="text-center text-muted py-4" id="loadingIndicator">
                  <div class="loading-dots mx-auto mb-3">
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                  </div>
                  <p>Loading messages...</p>
                </div>
              </div>

              <!-- Chat Input -->
              <div class="chat-input-container">
                <div class="d-flex gap-3 align-items-end">
                  <div class="flex-grow-1">
                    <textarea
                      class="form-control chat-input"
                      id="messageInput"
                      rows="1"
                      placeholder="Type your message..."
                      maxlength="2000"
                    ></textarea>
                    <small class="text-muted ms-3">
                      <span id="charCount">0</span>/2000 characters
                    </small>
                  </div>
                  <button class="send-btn" id="sendButton" disabled>
                    <i class="fas fa-paper-plane"></i>
                  </button>
                </div>
              </div>
              <% } else { %>
              <!-- Empty Chat State -->
              <div class="empty-chat-state">
                <i class="fas fa-comments"></i>
                <h4 class="mb-3">Welcome to Messages</h4>
                <p class="text-muted mb-4">
                  Select a conversation from the sidebar to start chatting<br />
                  with your skill swap partners
                </p>
                <div class="d-flex gap-2">
                  <a href="/requests/inbox" class="btn btn-primary">
                    <i class="fas fa-inbox me-2"></i>View Requests
                  </a>
                  <a href="/browse" class="btn btn-outline-primary">
                    <i class="fas fa-search me-2"></i>Browse Users
                  </a>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

