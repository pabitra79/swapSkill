              <i class="fas fa-comments text-primary me-2"></i>
              Messages
            </h1>
            <p class="section-subtitle mb-0">
              Chat with your skill swap partners and coordinate sessions
            </p>
          </div>

          <!-- Chat Container -->
          <div class="chat-container">
            <!-- Conversations Sidebar -->
