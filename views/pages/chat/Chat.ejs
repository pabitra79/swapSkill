                <a class="nav-link" href="#">Sessions</a>
                <img src="https://via.placeholder.com/35" class="rounded-circle ms-3" alt="Profile">
            </div>
        </div>
    </nav>

    <div class="container-fluid chat-container mt-4">
        <div class="row h-100">
            <!-- Conversations List -->
