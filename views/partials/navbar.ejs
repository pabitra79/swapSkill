      <ul class="navbar-nav">
        <% if (typeof user !== 'undefined' && user) { %>
        <li class="nav-item">
          <a class="nav-link position-relative" href="/requests/inbox">
            <i class="fas fa-bell me-1"></i>Requests <% if (typeof pendingCount
