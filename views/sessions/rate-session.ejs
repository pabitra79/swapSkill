<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> - SkillSwap</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card shadow">
            <div class="card-header bg-primary text-white">
              <h4 class="mb-0"><i class="fas fa-star me-2"></i>Rate Session</h4>
            </div>
            <div class="card-body">
              <div class="session-info mb-4 p-3 bg-light rounded">
                <h5>Session Details</h5>
                <p class="mb-1"><strong>Skill:</strong> <%= session.skill %></p>
                <p class="mb-1">
                  <strong>Date:</strong> <%= session.date.toLocaleDateString()
                  %>
                </p>
                <p class="mb-1">
                  <strong>Hours:</strong> <%= session.hours %> hours
                </p>
                <p class="mb-0">
                  <strong>Your Role:</strong> <%= session.teacher.toString() ===
                  user._id.toString() ? 'Teacher' : 'Student' %>
                </p>
              </div>

              <form id="ratingForm">
                <div class="mb-4">
                  <label class="form-label fw-bold"
                    >How would you rate this session?</label
                  >
                  <div class="rating-stars mb-3">
                    <% for(let i = 1; i <= 5; i++) { %>
                    <i
                      class="fas fa-star fa-2x star-rating"
                      data-rating="<%= i %>"
                      style="cursor: pointer; color: #ddd; margin-right: 10px"
                    ></i>
                    <% } %>
                  </div>
                  <input
                    type="hidden"
                    name="rating"
                    id="ratingValue"
                    required
                  />
                  <div id="ratingText" class="text-muted small">
                    Select a rating
                  </div>
                </div>

                <div class="mb-4">
                  <label for="comment" class="form-label fw-bold"
                    >Optional Feedback</label
                  >
                  <textarea
                    class="form-control"
                    id="comment"
                    name="comment"
                    rows="4"
                    placeholder="Share your experience with this session... (optional)"
                    maxlength="500"
                  ></textarea>
                  <div class="form-text">Maximum 500 characters</div>
                </div>

                <div class="d-flex gap-2">
                  <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-paper-plane me-2"></i>Submit Rating
                  </button>
                  <a
                    href="/sessions/history"
                    class="btn btn-outline-secondary btn-lg"
                  >
                    Skip Rating
                  </a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      let selectedRating = 0;
      const stars = document.querySelectorAll(".star-rating");
      const ratingValue = document.getElementById("ratingValue");
      const ratingText = document.getElementById("ratingText");

      // Star rating functionality
      stars.forEach((star) => {
        star.addEventListener("click", () => {
          selectedRating = parseInt(star.getAttribute("data-rating"));
          ratingValue.value = selectedRating;

          // Update stars display
          stars.forEach((s, index) => {
            if (index < selectedRating) {
              s.style.color = "#ffc107"; // Gold color for selected stars
            } else {
              s.style.color = "#ddd"; // Grey for unselected
            }
          });

          // Update rating text
          const ratingTexts = {
            1: "Poor - Needs significant improvement",
            2: "Fair - Has room for improvement",
            3: "Good - Met expectations",
            4: "Very Good - Exceeded expectations",
            5: "Excellent - Outstanding experience",
          };
          ratingText.textContent = ratingTexts[selectedRating];
          ratingText.className = "small fw-bold text-warning";
        });
      });

      // Form submission
      document
        .getElementById("ratingForm")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          if (selectedRating === 0) {
            alert("Please select a rating");
            return;
          }

          const formData = new FormData(e.target);
          const submitBtn = e.target.querySelector('button[type="submit"]');

          try {
            submitBtn.disabled = true;
            submitBtn.innerHTML =
              '<i class="fas fa-spinner fa-spin me-2"></i>Submitting...';

            const response = await fetch(`/sessions/rate/<%= session._id %>`, {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                rating: selectedRating,
                comment: formData.get("comment"),
              }),
            });

            const result = await response.json();

            if (result.success) {
              alert("Rating submitted successfully!");
              window.location.href = "/sessions/history";
            } else {
              alert("Error: " + result.error);
              submitBtn.disabled = false;
              submitBtn.innerHTML =
                '<i class="fas fa-paper-plane me-2"></i>Submit Rating';
            }
          } catch (error) {
            alert("Failed to submit rating. Please try again.");
            submitBtn.disabled = false;
            submitBtn.innerHTML =
              '<i class="fas fa-paper-plane me-2"></i>Submit Rating';
          }
        });
    </script>
  </body>
</html>
